<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="10dp">
    <ImageButton
        android:id="@+id/image_return"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_action_return"
        app:layout_constraintTop_toTopOf="@id/edit_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/edit_search"/>
    <EditText
        android:id="@+id/edit_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="手机"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_frame_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_return"
        app:layout_constraintRight_toLeftOf="@id/image_switch"/>
    <ImageButton
        android:id="@+id/image_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/edit_search"
        app:layout_constraintBottom_toBottomOf="@id/edit_search"
        app:layout_constraintRight_toRightOf="@id/edit_search"
        android:background="@drawable/ic_action_search"/>
    <ImageButton
        android:id="@+id/image_switch"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_action_linear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_search"
        app:layout_constraintBottom_toBottomOf="@id/edit_search"
        app:layout_constraintLeft_toRightOf="@id/edit_search"
        android:layout_marginRight="10dp"/>
        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ccc"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/edit_search"/>

    <TextView
            android:id="@+id/text_comprehensive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textSize="18sp"
            style="@style/text_style"

            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/view_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_Sales_volume"
            />
        <TextView
            android:id="@+id/text_Sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销量"
            style="@style/text_style"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/view_top"
            app:layout_constraintLeft_toRightOf="@id/text_comprehensive"
            app:layout_constraintRight_toLeftOf="@id/text_price"
            />
        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            style="@style/text_style"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/view_top"
            app:layout_constraintLeft_toRightOf="@id/text_Sales_volume"
            app:layout_constraintRight_toLeftOf="@id/text_screen"
            />
        <TextView
            android:id="@+id/text_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选"
            style="@style/text_style"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/view_top"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_price"
            />
    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ccc"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_screen"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrecycleview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>